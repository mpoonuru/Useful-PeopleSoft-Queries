--Gives the Portal Navigation path

SELECT A.PORTAL_LABEL, 
       B.PORTAL_NAVPATH 
FROM   PSPRSMDEFN A, 
       PSPRSMNAVINFO B 
WHERE  A.PORTAL_NAME = B.PORTAL_NAME 
       AND A.PORTAL_REFTYPE = B.PORTAL_REFTYPE 
       AND A.PORTAL_OBJNAME = B.PORTAL_OBJNAME 
       AND A.PORTAL_NAME = 'EMPLOYEE' 
       AND A.PORTAL_URI_SEG2 IN( 'VCHR_APPROVE' ) WITH UR; -- Replace component name
